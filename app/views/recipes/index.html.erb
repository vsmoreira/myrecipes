<%= render 'shared/page_title', title: "All Recipes" %>

<%= will_paginate %>

<%
@recipes.each do |recipe|
%>

  <div class="row" >
    <div class="col-md-2">
      <section class="chef-info center">
        <%= gravatar_for recipe.chef, size: 100 %>
        <h5>Chef name: <%= recipe.chef.chefname %></h5>
      </section>
    </div>
    <div class="col-lg-6 well">
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
      <p><%= recipe.summary %></p>
      <p>
        <span class="quiet"><small>Updated <%= time_ago_in_words(recipe.updated_at)%> ago, </small></span>
        <span class="quiet"><small>created <%= time_ago_in_words(recipe.created_at)%> ago</small></span>
      </p>
      <%= render 'shared/like', recipe: recipe %>
    </div>
    <div class="col-md-4">
      <%= image_tag(recipe.picture.url, size: "250x150", class: "img-thumbnail") if recipe.picture? %>
    </div>
  </div>
<hr />
<% end %>

<%= will_paginate %>